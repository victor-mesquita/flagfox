{
  "name": "@nodis-functions/repo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo contendo as functions nodis - loja digital",
  "workspaces": {
    "packages": [
      "packages/*",
      "functions/*"
    ],
    "nohoist": [
      "**/azure-functions-core-tools"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "outputs": [
          "coverage/**"
        ],
        "dependsOn": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
